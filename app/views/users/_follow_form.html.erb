<% unless current_user?(@user) %>
  <div id="follow_form">
  <% if current_user.following?(@user) %>
    <%= render 'unfollow' %>
  <% else %>
    <%= render 'follow' %>
  <% end %>
  </div>
  <style>
body
{ 
background-color: lightgrey;
background-repeat:no-repeat;
background-attachment:scroll;
background-position:center center; 
}
</style>
<% end %>